{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es6","dom"
        ],
        "outDir": "lib",
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "strict": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}
